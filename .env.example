# Telegram Bot
TELEGRAM_BOT_TOKEN=

# 2GIS API
TWOGIS_API_KEY=

# Search settings
DEFAULT_RADIUS_METERS=500
MAX_RESTAURANTS_PER_SEARCH=20
REQUEST_TIMEOUT_SECONDS=10

# Rate limiting
YANDEX_DELAY_SECONDS=2.0

# Yandex search toggle (fallback only, with mandatory rate limiting)
ENABLE_YANDEX_SEARCH=true

# Agent settings (browser-based menu finder - fallback when static parser fails)
AGENT_ENABLED=true
AGENT_TIMEOUT_SECONDS=30
AGENT_MAX_STEPS=5

# Groq API (free LLM for agent reasoning)
# Get your free key at https://console.groq.com
GROQ_API_KEY=

# === PDF Parsing (NEW) ===
PDF_OCR_ENABLED=true
PDF_OCR_LANGUAGE=rus+eng
PDF_MAX_PAGES=5

# === Browser Service (NEW) ===
BROWSER_TIMEOUT_MS=30000
BROWSER_BLOCK_RESOURCES=true

# === Cache Settings (NEW) ===
# Leave empty to use SQLite (default), or set Redis URL
# Example: redis://localhost:6379/0
REDIS_URL=
CACHE_PDF_TTL=86400
CACHE_HTML_TTL=3600

# === Task Queue (NEW) ===
TASK_QUEUE_WORKERS=3
TASK_QUEUE_MAX_SIZE=100
